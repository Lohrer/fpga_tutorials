\ProvidesPackage{vivado_tutorial}

% Sections and URL links
\RequirePackage{nameref}
\RequirePackage{hyperref}
\hypersetup{
    colorlinks=true,
    linkcolor=blue,
    urlcolor=blue
}

% Margins
\RequirePackage[left=1in,right=1in,top=0.5in,bottom=0.5in, includefoot, includehead]{geometry}

% Note sections
\RequirePackage{mdframed}
\RequirePackage{xcolor}
\RequirePackage{tikz}
\global\mdfdefinestyle{note}{%
    frametitle={%
        \tikz[baseline=(current bounding box.east),outer sep=0pt]
        \node[anchor=east,rectangle,fill=yellow!40]
        {\strut Note};%
    },%
    nobreak=true,%
    linecolor=yellow!40,%
    linewidth=2pt,topline=true,%
    frametitleaboveskip=\dimexpr-\ht\strutbox\relax
}

% Footer
\RequirePackage{fancyhdr}
% Turn on the style
\pagestyle{fancy}
% Clear the header and footer
\fancyhead{}
\fancyfoot{}
\renewcommand{\headrulewidth}{0pt}
% Set last update date on the left, page number on the right
\fancyfoot[R]{\small\thepage}
\fancyfoot[L]{\small Updated \today}

\graphicspath{{img/}}

